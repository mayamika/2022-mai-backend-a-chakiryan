input LoginInput {
  login: String!
  password: String!
}

type LoginPayload {
  token: String!
}

input RegisterInput {
  login: String!
  password: String!
  name: String!
  surname: String!
}

type RegisterPayload {
  token: String!
}

extend type Mutation {
  login(input: LoginInput!): LoginPayload!
  register(input: RegisterInput!): RegisterPayload!
}
