input PostInput {
  text: String!
}

type Post {
  id: ID!
  from: User!
  text: String!
  createdAt: Time!
}

type FeedPayload {
  totalCount: Int!
  hasNextPage: Boolean!
  scroll: String
  posts: [Post]
}

extend type Mutation {
  publishPost(input: PostInput!): Post!
}

extend type Query {
  feed(
    first: Int!
    after: String
    search: String
  ): FeedPayload!
}
